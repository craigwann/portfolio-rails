<h1>Projects</h1>

<% @projects.each do |project| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to project.name, project_path(project) %></h3>
  </div>
  <div class="panel-body">
    <%= image_tag project.imgsm, class: 'img-responsive' %>
    <strong><%=project.category %>:</strong> <%=project.description %>
  </div>
</div>
<% end %>
